<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:id="@+id/houseAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/secondaryDarkColor"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/secondaryTextColor"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Address" />

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="28dp"
            android:contentDescription="@string/change_houseImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.164"
            app:layout_constraintStart_toStartOf="@+id/houseAddress"
            app:layout_constraintTop_toBottomOf="@+id/houseAddress" />

        <TextView
            android:id="@+id/listPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/secondaryLightColor"
            android:drawablePadding="14dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/ic_baseline_sell_24"
            app:drawableTint="@color/primaryLightColor"
            app:drawableTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/bedrooms"
            app:layout_constraintStart_toEndOf="@+id/imageIcon"
            app:layout_constraintStart_toStartOf="@+id/bedrooms"
            app:layout_constraintTop_toBottomOf="@+id/houseAddress"
            tools:text="List Price" />

        <TextView
            android:id="@+id/bedrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/secondaryLightColor"
            android:drawablePadding="14dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/ic_baseline_bed_24"
            app:drawableTint="@color/primaryLightColor"
            app:drawableTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/bathrooms"
            app:layout_constraintStart_toEndOf="@+id/imageIcon"
            app:layout_constraintStart_toStartOf="@+id/bathrooms"
            app:layout_constraintTop_toBottomOf="@+id/listPrice"
            tools:text="Bedrooms" />

        <TextView
            android:id="@+id/auctioneer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/secondaryLightColor"
            android:drawablePadding="14sp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/ic_baseline_person_24"
            app:drawableTint="@color/primaryLightColor"
            app:drawableTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.282"
            app:layout_constraintStart_toEndOf="@+id/imageIcon"
            app:layout_constraintTop_toBottomOf="@+id/bathrooms"
            tools:text="Auctioneer" />

        <TextView
            android:id="@+id/bathrooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/secondaryLightColor"
            android:drawablePadding="14dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/ic_outline_bathtub_24"
            app:drawableTint="@color/primaryLightColor"
            app:drawableTintMode="multiply"
            app:layout_constraintBottom_toTopOf="@+id/auctioneer"
            app:layout_constraintStart_toEndOf="@+id/imageIcon"
            app:layout_constraintStart_toStartOf="@+id/auctioneer"
            app:layout_constraintTop_toBottomOf="@+id/bedrooms"
            tools:text="Bathrooms" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/secondaryLightColor"
            android:drawablePadding="14dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/secondaryTextColor"
            android:textSize="18sp"
            android:textStyle="normal"
            app:drawableLeftCompat="@drawable/ic_outline_description_24"
            app:drawableTint="@color/primaryLightColor"
            app:drawableTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/imageIcon"
            app:layout_constraintTop_toBottomOf="@id/auctioneer"
            tools:text="Description" />

        <TextView
            android:id="@+id/soldPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="24dp"
            android:background="@color/secondaryLightColor"
            android:drawablePadding="0dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/primaryDarkColor"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_baseline_euro_24"
            app:drawableTint="@color/primaryDarkColor"
            app:drawableTintMode="multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.884"
            app:layout_constraintStart_toEndOf="@+id/imageIcon"
            app:layout_constraintTop_toBottomOf="@id/description"
            tools:text="Sold Price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>